<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.infoglobo.com.criptografia.MainActivity">

    <Button
        android:id="@+id/encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encriptografar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/dencrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descriptografar"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/encrypt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/open"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:text="Abrir arquivo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/dencrypt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
